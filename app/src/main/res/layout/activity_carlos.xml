<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".CarlosActivity">

    <ImageView
        android:id="@+id/Carlos_Bg1"
        android:layout_width="588dp"
        android:layout_height="826dp"
        android:contentDescription="@string/Carlos_Bg1"
        app:srcCompat="@drawable/bg2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-89dp"
        tools:layout_editor_absoluteY="-226dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ff000000"
        android:scrollbars="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_editTextPhone" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:background="#85FFFFFF"
        android:backgroundTint="#C3FFFFFF"
        android:text="@string/Carlos_Title"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textColorHighlight="#E91E63"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.303" />

    <ImageView
        android:id="@+id/Carlos_Image1"
        android:layout_width="189dp"
        android:layout_height="166dp"
        android:contentDescription="@string/Carlos_imgDesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        app:srcCompat="@drawable/akali" />

    <EditText
        android:id="@+id/Carlos_editTextEmail"
        android:layout_width="205dp"
        android:layout_height="41dp"
        android:layout_marginTop="60dp"
        android:background="#00FFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/Carlos_Email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:text="@string/Carlos_Email"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Image1" />

    <EditText
        android:id="@+id/Carlos_editTextPhone"
        android:layout_width="202dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/Carlos_phoneNumber"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:text="@string/Carlos_phoneNumber"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_editTextEmail" />


    <ImageView
        android:id="@+id/Carlos_Image2"
        android:layout_width="52dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/Carlos_photoDescription2"
        app:layout_constraintEnd_toStartOf="@+id/Carlos_editTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/Carlos_Image3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/Carlos_photoDescription3"
        app:layout_constraintEnd_toStartOf="@+id/Carlos_editTextPhone"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Image2"
        app:srcCompat="@android:drawable/stat_sys_phone_call" />


</androidx.constraintlayout.widget.ConstraintLayout>