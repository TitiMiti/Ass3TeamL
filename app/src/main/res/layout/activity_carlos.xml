<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".CarlosActivity">

    <ImageView
        android:id="@+id/Carlos_Bg1"
        android:layout_width="598dp"
        android:layout_height="448dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/Carlos_Bg1"
        app:layout_constraintBottom_toTopOf="@+id/Carlos_Title2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg2"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/Carlos_Divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ff000000"
        android:scrollbars="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Carlos_Title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Text1" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/dot_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        app:srcCompat="@drawable/dot_png4" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/dot_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9"
        app:srcCompat="@drawable/dot_png4" />

    <TextView
        android:id="@+id/Carlos_Text2"
        android:layout_width="185dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/Carlos_Text2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Title3" />

    <TextView
        android:id="@+id/Carlos_Text3"
        android:layout_width="185dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/Carlos_Text3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Text2" />

    <TextView
        android:id="@+id/Carlos_Text4"
        android:layout_width="185dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/Carlos_Text4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Text3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="#85FFFFFF"
        android:backgroundTint="#C3FFFFFF"
        android:text="@string/Carlos_Title"
        android:textAlignment="center"
        android:textColor="#070707"
        android:textColorHighlight="#250933"
        android:textColorLink="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Image1" />

    <ImageView
        android:id="@+id/Carlos_Image1"
        android:layout_width="179dp"
        android:layout_height="157dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/Carlos_imgDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carlos_photo" />

    <TextView
        android:id="@+id/Carlos_editTextEmail"
        android:layout_width="209dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/Carlos_Email"
        android:importantForAutofill="no"
        android:text="@string/Carlos_Email"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/Carlos_editTextPhone"
        android:layout_width="202dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:background="#00FFFFFF"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:hint="@string/Carlos_phoneNumber"
        android:importantForAutofill="no"
        android:text="@string/Carlos_phoneNumber"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_editTextEmail" />


    <ImageView
        android:id="@+id/Carlos_Image2"
        android:layout_width="52dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/Carlos_photoDescription2"
        app:layout_constraintEnd_toStartOf="@+id/Carlos_editTextEmail"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/Carlos_Image3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/Carlos_photoDescription3"
        app:layout_constraintEnd_toStartOf="@+id/Carlos_editTextPhone"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Image2"
        app:srcCompat="@android:drawable/stat_sys_phone_call" />

    <ImageView
        android:id="@+id/Carlos_Image4"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/Carlos_Image4"
        app:layout_constraintBottom_toTopOf="@+id/Carlos_Text1"
        app:layout_constraintStart_toEndOf="@+id/Carlos_Title2"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_editTextPhone"
        app:srcCompat="@drawable/graduation_cap_clipart_collection_10" />

    <TextView
        android:id="@+id/Carlos_Title2"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Carlos_Title2"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.452"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_editTextPhone"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/Carlos_Title3"
        android:layout_width="109dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/Carlos_Title3"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Text1" />

    <ImageView
        android:id="@+id/Carlos_Image5"
        android:layout_width="57dp"
        android:layout_height="41dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:contentDescription="@string/Carlos_Image5"
        app:layout_constraintStart_toEndOf="@+id/Carlos_Title3"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Image4"
        app:srcCompat="@drawable/controller" />

    <TextView
        android:id="@+id/Carlos_Text1"
        android:layout_width="368dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:text="@string/Carlos_Text1"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Title2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="39dp"
        android:layout_height="29dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:contentDescription="@string/dot_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Carlos_Title3"
        app:srcCompat="@drawable/dot_png4" />


</androidx.constraintlayout.widget.ConstraintLayout>